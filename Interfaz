import tkinter as tk

ventana = tk.Tk()
ventana.title("Convertidor de Números")

instrucciones = tk.Label(ventana, text="Introduce un número decimal:")
instrucciones.pack

entrada_numero = tk.Entry(ventana)
entrada_numero.pack

resultado_binario = tk.Label(ventana, text="Binario:")
resultado_binario.pack

resultado_octal = tk.Label(ventana, text="Octal:")
resultado_octal.pack

resultado_hexadecimal = tk.Label(ventana, text="Hexadecimal:")
resultado_hexadecimal.pack

boton_convertir = tk.Button(ventana, text="Convertir")
boton_convertir.pack

ventana.mainloop()
